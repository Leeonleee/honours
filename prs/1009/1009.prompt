6524:     ZipfileEntry **pp;
6525:     for(pp=&pTab->pFirstEntry; *pp!=pBefore; pp=&((*pp)->pNext));
6526:     pNew->pNext = pBefore;
6527:     *pp = pNew;
6528:   }
