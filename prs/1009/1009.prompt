9662:     }else{
9663:       idxDatabaseError(p->dbv, pzErr);
9664:     }
9665:   }
9666: 
9667:   if( rc!=SQLITE_OK ){
9668:     idxScanFree(p->pScan, pScanOrig);
9669:     idxStatementFree(p->pStatement, pStmtOrig);
9670:     p->pScan = pScanOrig;
9671:     p->pStatement = pStmtOrig;
9672:   }
9673: 
9674:   return rc;
9675: }
