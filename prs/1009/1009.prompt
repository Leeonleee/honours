7212: typedef struct ZipfileBuffer ZipfileBuffer;
7213: struct ZipfileBuffer {
7214:   u8 *a;                          /* Pointer to buffer */
7215:   int n;                          /* Size of buffer in bytes */
7216:   int nAlloc;                     /* Byte allocated at a[] */
