4599:     p->sign = 0;
4600:   }
4601:   if( p->sign ){
4602:     z[0] = '-';
4603:     i = 1;
4604:   }
4605:   n = p->nDigit - p->nFrac;
4606:   if( n<=0 ){
4607:     z[i++] = '0';
4608:   }
4609:   j = 0;
4610:   while( n>1 && p->a[j]==0 ){
4611:     j++;
4612:     n--;
4613:   }
4614:   while( n>0  ){
4615:     z[i++] = p->a[j] + '0';
4616:     j++;
4617:     n--;
4618:   }
4619:   if( p->nFrac ){
