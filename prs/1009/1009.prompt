11916:       for(i=0; i<nArg; i++){
11917:         if( i>0 ) utf8_printf(p->out, "%s", p->colSeparator);
11918:         utf8_printf(p->out,"%s",azArg[i] ? azArg[i] : p->nullValue);
11919:       }
