8441:     expertFilter,                 /* xFilter - configure scan constraints */
8442:     expertNext,                   /* xNext - advance a cursor */
8443:     expertEof,                    /* xEof */
8444:     expertColumn,                 /* xColumn - read data */
8445:     expertRowid,                  /* xRowid - read data */
