9219:   int nSlot;
9220:   struct IdxRemSlot {
9221:     int eType;                    /* SQLITE_NULL, INTEGER, REAL, TEXT, BLOB */
9222:     i64 iVal;                     /* SQLITE_INTEGER value */
9223:     double rVal;                  /* SQLITE_FLOAT value */
9224:     int nByte;                    /* Bytes of space allocated at z */
