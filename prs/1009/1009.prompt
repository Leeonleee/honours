978: 		size_t new_pos = prev_char(l);
979: 		size_t char_sz = l->pos - new_pos;
980: 		memmove(l->buf + new_pos, l->buf + l->pos, l->len - l->pos);
981: 		l->len -= char_sz;
982: 		l->pos = new_pos;
983: 		l->buf[l->len] = '\0';
