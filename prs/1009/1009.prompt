1221: 	while (1) {
1222: 		char c;
1223: 		int nread;
1224: 
1225: 		nread = read(STDIN_FILENO, &c, 1);
1226: 		if (nread <= 0)
1227: 			continue;
1228: 		memmove(quit, quit + 1, sizeof(quit) - 1); /* shift string to left. */
1229: 		quit[sizeof(quit) - 1] = c;                /* Insert current char on the right. */
1230: 		if (memcmp(quit, "quit", sizeof(quit)) == 0)
1231: 			break;
