11293:     for(i=0; z[i]; i++){
11294:       if( needCsvQuote[((unsigned char*)z)[i]]
11295:          || (z[i]==p->colSeparator[0] &&
11296:              (nSep==1 || memcmp(z, p->colSeparator, nSep)==0)) ){
11297:         i = 0;
11298:         break;
11299:       }
11300:     }
11301:     if( i==0 ){
11302:       char *zQuoted = sqlite3_mprintf("\"%w\"", z);
