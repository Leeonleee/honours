8172: static char *expertDequote(const char *zIn){
8173:   int n = STRLEN(zIn);
8174:   char *zRet = sqlite3_malloc(n);
8175: 
8176:   assert( zIn[0]=='\'' );
8177:   assert( zIn[n-1]=='\'' );
8178: 
8179:   if( zRet ){
8180:     int iOut = 0;
8181:     int iIn = 0;
8182:     for(iIn=1; iIn<(n-1); iIn++){
8183:       if( zIn[iIn]=='\'' ){
8184:         assert( zIn[iIn+1]=='\'' );
8185:         iIn++;
8186:       }
8187:       zRet[iOut++] = zIn[iIn];
8188:     }
8189:     zRet[iOut] = '\0';
8190:   }
8191: 
8192:   return zRet;
8193: }
