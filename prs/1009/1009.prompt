5856: /*
5857: ** Read and return a 16-bit little-endian unsigned integer from buffer aBuf.
5858: */
5859: static u16 zipfileGetU16(const u8 *aBuf){
5860:   return (aBuf[1] << 8) + aBuf[0];
5861: }
