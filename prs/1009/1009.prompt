3032:     ** number.  Leave it unchanged. */
3033:     pIdxInfo->estimatedRows = 0x7fffffff;
3034:   }else{
3035:     pIdxInfo->aConstraintUsage[idxPath].omit = 1;
3036:     pIdxInfo->aConstraintUsage[idxPath].argvIndex = 1;
