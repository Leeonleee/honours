5863: /*
5864: ** Read and return a 32-bit little-endian unsigned integer from buffer aBuf.
5865: */
5866: static u32 zipfileGetU32(const u8 *aBuf){
5867:   return ((u32)(aBuf[3]) << 24)
5868:        + ((u32)(aBuf[2]) << 16)
5869:        + ((u32)(aBuf[1]) <<  8)
5870:        + ((u32)(aBuf[0]) <<  0);
5871: }
