1327: /*
1328: ** Implementation of the POSIX readdir_r() function using the MSVCRT.
1329: */
1330: INT readdir_r(
1331:   LPDIR dirp,
1332:   LPDIRENT entry,
1333:   LPDIRENT *result
1334: ){
1335:   struct _finddata_t data;
1336: 
1337:   if( dirp==NULL ) return EBADF;
