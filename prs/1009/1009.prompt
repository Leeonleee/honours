771:     { "K",   1000 },
772:     { "M",   1000000 },
773:     { "G",   1000000000 },
774:   };
775:   int i;
776:   int isNeg = 0;
777:   if( zArg[0]=='-' ){
778:     isNeg = 1;
779:     zArg++;
780:   }else if( zArg[0]=='+' ){
781:     zArg++;
782:   }
783:   if( zArg[0]=='0' && zArg[1]=='x' ){
784:     int x;
785:     zArg += 2;
786:     while( (x = hexDigitValue(zArg[0]))>=0 ){
787:       v = (v<<4) + x;
788:       zArg++;
789:     }
790:   }else{
791:     while( IsDigit(zArg[0]) ){
792:       v = v*10 + zArg[0] - '0';
793:       zArg++;
