1233: 		printf("'%c' %02x (%d) (type quit to exit)\n", isprint(c) ? c : '?', (int)c, (int)c);
1234: 		printf("\r"); /* Go left edge manually, we are in raw mode. */
1235: 		fflush(stdout);
