190: 	bool wait()
191: 	{
192: 		// http://stackoverflow.com/questions/2013181/gdb-causes-sem-wait-to-fail-with-eintr-error
193: 		int rc;
194: 		do {
195: 			rc = sem_wait(&m_sema);
196: 		} while (rc == -1 && errno == EINTR);
197: 		return rc == 0;
198: 	}
199: 
200: 	bool try_wait()
201: 	{
202: 		int rc;
203: 		do {
204: 			rc = sem_trywait(&m_sema);
