1301: 
1302:   if( dirp==NULL ) return NULL;
1303: 
1304:   if( dirp->d_first.d_ino==0 ){
1305:     dirp->d_first.d_ino++;
1306:     dirp->d_next.d_ino++;
1307: 
1308:     return &dirp->d_first;
1309:   }
1310: 
1311: next:
1312: 
1313:   memset(&data, 0, sizeof(struct _finddata_t));
