7721: int sqlite3_expert_sql(
7722:   sqlite3expert *p,               /* From a successful sqlite3_expert_new() */
7723:   const char *zSql,               /* SQL statement(s) to add */
7724:   char **pzErr                    /* OUT: Error message (if any) */
7725: );
