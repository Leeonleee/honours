795:   }
796:   for(i=0; i<ArraySize(aMult); i++){
797:     if( sqlite3_stricmp(aMult[i].zSuffix, zArg)==0 ){
798:       v *= aMult[i].iMult;
799:       break;
800:     }
801:   }
802:   return isNeg? -v : v;
