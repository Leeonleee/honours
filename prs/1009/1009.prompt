5223:       m >>= 1-e;
5224:       e = 0;
5225:     }else if( e>0x7ff ){
5226:       e = 0x7ff;
5227:     }
5228:     a = m & ((((sqlite3_int64)1)<<52)-1);
5229:     a |= e<<52;
5230:     if( isNeg ) a |= ((sqlite3_uint64)1)<<63;
5231:     memcpy(&r, &a, sizeof(r));
5232:     sqlite3_result_double(context, r);
5233:   }
