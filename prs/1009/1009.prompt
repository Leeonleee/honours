484: 	copy = (char*) malloc(len + 1);
485: 	if (copy == NULL)
486: 		return;
487: 	memcpy(copy, str, len + 1);
488: 	cvec = (char**) realloc(lc->cvec, sizeof(char *) * (lc->len + 1));
489: 	if (cvec == NULL) {
490: 		free(copy);
491: 		return;
492: 	}
