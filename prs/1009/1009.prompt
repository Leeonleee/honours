1110: 			break;
1111: 		case CTRL_F: /* ctrl-f */
1112: 			linenoiseEditMoveRight(&l);
1113: 			break;
1114: 		case CTRL_P: /* ctrl-p */
1115: 			linenoiseEditHistoryNext(&l, LINENOISE_HISTORY_PREV);
