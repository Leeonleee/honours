8448:     0,                            /* xSync - sync transaction */
8449:     0,                            /* xCommit - commit transaction */
8450:     0,                            /* xRollback - rollback transaction */
8451:     0,                            /* xFindFunction - function overloading */
8452:     0,                            /* xRename - rename the table */
