10148: static int dbdataValueBytes(int eType){
10149:   switch( eType ){
10150:     case 0: case 8: case 9:
10151:     case 10: case 11:
10152:       return 0;
10153:     case 1:
10154:       return 1;
10155:     case 2:
10156:       return 2;
10157:     case 3:
10158:       return 3;
10159:     case 4:
10160:       return 4;
10161:     case 5:
10162:       return 6;
10163:     case 6:
10164:     case 7:
10165:       return 8;
10166:     default:
10167:       if( eType>0 ){
10168:         return ((eType-12) / 2);
10169:       }
10170:       return 0;
10171:   }
10172: }
