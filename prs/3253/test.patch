+	REQUIRE(duckdb_vector_get_column_type(nullptr) == nullptr);
+
+	REQUIRE(duckdb_data_chunk_get_size(data_chunk) == 0);
+	REQUIRE(duckdb_data_chunk_get_size(nullptr) == 0);
