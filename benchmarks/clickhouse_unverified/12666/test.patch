+    sleep 0.5
+done
+
+$CLICKHOUSE_CLIENT --query "KILL MUTATION WHERE table='replicated_mutation_table' and database='$CLICKHOUSE_DATABASE' and mutation_id='0000000000'" &> /dev/null
+
+while [ "$query_result" != "0" ]
