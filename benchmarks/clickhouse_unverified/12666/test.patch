+    CREATE TABLE replicated_mutation_table(
+        date Date,
+        key UInt64,
+        value String
+    )
+    ENGINE = ReplicatedMergeTree('/clickhouse/tables/mutation_table', '1')
+    ORDER BY tuple()
+    PARTITION BY date
+"
+
